@using Oracle.ManagedDataAccess.Client

@{
    ViewData["Title"] = "Index";
}

<!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
<body class="fixed-left">
    <!-- Begin page -->
    <div id="wrapper">

        <!---------------------------------------------------------------------------------- TOP MENU ----------------------------------------------------------------------------------->
        <div class="topbar">
            <!-- LOGO -->
            <div class="topbar-left">
                <div class="text-center">
                    <a href="#" class="logo"><i class="md md-terrain"></i> <span>CMS JIRAMA </span></a>
                </div>
            </div>

            <div class="navbar navbar-default" role="navigation">
                <div class="container">
                    <div class="">
                        <!-- Collapse sidebar menu -->
                        <div class="pull-left">
                            <button class="button-menu-mobile open-left">
                                <i class="fa fa-bars"></i>
                            </button>
                            <span class="clearfix"></span>
                        </div>

                        <!--Full screen or not-->
                        <ul class="nav navbar-nav navbar-right pull-right">
                            <li class="hidden-xs">
                                <a href="#" id="btn-fullscreen" class="waves-effect waves-light"><i class="md md-crop-free"></i></a>
                            </li>
                            <li><a href="~/Home/Index"><i class="md md-settings-power"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--------------------------------------------------------------------------------- FIN TOP MENU------------------------------------------------------------------------------------------------------->
        <!---------------------------------------------------------------------------------- MENU GAUCHE --------------------------------------------------------------------------------------------->

        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <div class="user-details">
                    <div class="pull-left">
                        <a href="www.Jirama.mg" target="_blank" title="Consulter la page web de Jirama"><img src="~/bootstrap/images/logoJirama.jpg" class="thumb-md img-circle"></a>
                    </div>
                </div>
                <!--- Divider -->
                <div id="sidebar-menu">
                    <ul>
                        <li>
                            <a href="~/Rapport/Index" class="waves-effect"><i class="md md-account-balance"></i><span> Rapport </span></a>
                        </li>
                        <li>
                            <a href="~/Utilisateur/Index" class="waves-effect"><i class="ion ion-android-friends"></i><span> Utilisateur </span></a>
                        </li>
                        <li>
                            <a href="~/Societe/Index" class="waves-effect"><i class="md md-contacts"></i><span> Société </span></a>
                        </li>
                        <li>
                            <a href="~/Prestation/Index" class="waves-effect"><i class="md md-event-note"></i><span> Prestation </span></a>
                        </li>
                        <li>
                            <a href="~/Activite/Index" class="waves-effect"><i class="md md-add-box"></i><span> Activité </span></a>
                        </li>
                        <li>
                            <a href="~/Certificat/Index" class="waves-effect"><i class="md md-assignment"></i><span> Certificat </span></a>
                        </li>
                        <li>
                            <a href="~/Frequentation/Index" class="waves-effect"><i class="md md-add-to-photos"></i><span> Fréquentation </span></a>
                        </li>
                        <li>
                            <a href="~/Infirmerie/Index" class="waves-effect"><i class="md md-gamepad"></i><span> Infirmerie </span></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!------------------------------------------------------------------------------- FIN MENU GAUCHE --------------------------------------------------------------------------------->
        <!----------------------------------------------------------------------------------- CONTENU --------------------------------------------------------------------------------------->

        <div class="content-page">
            <div class="content">
                <div class="container">

                    <!-- Page-Title -->
                    <div class="row">
                        <div class="col-sm-12">
                            <h4 class="pull-left page-title">Infirmerie</h4>
                            <ol class="breadcrumb pull-right">
                                <li>@System.DateTime.Today.ToLongDateString()</li>
                                <li>@System.DateTime.Now.ToShortTimeString()</li>
                            </ol>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Left sidebar -->
                        <div class="col-md-5 col-lg-4">
                            <div class="panel panel-default p-0 m-t-12">
                                <div class="panel-body t-20">
                                    <form method="post" action="~/Infirmerie/ValiderFreq">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label>ID :</label>
                                                    <input type="number" class="form-control" id="freqmala" name="id" readonly>
                                                </div>
                                                <div class="col-md-9">
                                                    <label>Nom patient :</label>
                                                    <input type="text" class="form-control" id="nom" name="nomPat" readonly>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label>Age :</label>
                                                    <input type="number" class="form-control" id="age" name="age" readonly>
                                                </div>
                                                <div class="col-md-3">
                                                    <label>Sexe :</label>
                                                    <input type="text" class="form-control" id="sexe" name="sexe" readonly>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="">Prestation :</label>
                                                    <input type="text" class="form-control" id="prest" name="prest" readonly />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="">TEMP :</label>
                                                    <input type="text" class="form-control text-center" name="temp" />
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="">TAMAX :</label>
                                                    <input type="text" class="form-control text-center" name="tamax" />
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="">TAMIN :</label>
                                                    <input type="text" class="form-control text-center" name="tamin" />
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="">PULS :</label>
                                                    <input type="text" class="form-control text-center" name="puls" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label class="">POIDS :</label>
                                                    <input type="text" class="form-control text-center" name="poids" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="">TAILLE :</label>
                                                    <input type="text" class="form-control text-center" name="taille" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label>PC :</label>
                                                    <input type="text" class="form-control text-center" name="pc" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label class="">ALBUMINE :</label>
                                                    <input type="text" class="form-control text-center" name="album" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="">GLYCEMIE :</label>
                                                    <input type="text" class="form-control text-center" name="glycemie" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <!-- boutons -->
                                            <div class="col-lg-12">
                                                <div class="btn-toolbar" role="toolbar">
                                                    <div class="pull-right">
                                                        <button type="button" class="btn btn-success waves-effect waves-light m-r-5"><i class="fa fa-floppy-o"></i></button>
                                                        <button type="reset" class="btn btn-danger waves-effect waves-light m-r-5"><i class="fa fa-times"></i></button>
                                                        <button type="submit" class="btn btn-purple waves-effect waves-light"> <span>Valider</span> <i class="fa fa-send m-l-10"></i> </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div> <!-- fin boutons -->
                                    </form>
                                </div>
                            </div>
                        </div> <!-- col-md-4 col-lg-3 -->
                        <!-- Right sidebar -->
                        <div class="col-md-7 col-lg-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="panel-title p-t-30 m-t-12">Fréquentation(s) en attente :</h3>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-4">
                                    <button class="btn btn-purple waves-effect waves-light" data-toggle="modal" data-target="#myModal">Liste d'attentes des Medecins</button>
                                </div>
                            </div>

                            <div class="panel panel-default m-t-15">
                                <div class="panel-body p-t-30">
                                    <table id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>ID </th>
                                                <th>Numero</th>
                                                <th>Nom</th>
                                                <th>Age</th>
                                                <th>Sexe</th>
                                                <th>Médecin</th>
                                                <th>Préstation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div> <!-- col-md-8 col-lg-9 -->
                    </div> <!-- row -->
                </div> <!-- container -->
            </div> <!-- content page-->
            <!-- Affiche liste fréquentation envoyé au Medecin en attente -->
            <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="width:65%;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title" id="myModalLabel">Liste d'attentes des Médecins</h4>
                        </div>
                        <div class="modal-body">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Numero</th>
                                        <th>Nom</th>
                                        <th>Age</th>
                                        <th>Sexe</th>
                                        <th>Médecin</th>
                                        <th>Préstation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                </tbody>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success waves-effect" data-dismiss="modal">Fermer</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

            <footer class="footer text-right">
                2019 © CMS Jirama.
            </footer>

        </div> <!-- end content page -->
    </div> <!-- END wrapper -->
    <!--------------------------------------------------------------------------------------- FIN CONTENU ---------------------------------------------------------------------------------->
    <!--------------------------------------------------------------------------------------- SCRIPT JS ----------------------------------------------------------------------------------->

</body>

<!------------------------------------------------------------------------------------ NOTIFICATION ---------------------------------------------------------------------------------------->
@if (TempData["message"] != null)
{
    <script>
        alert('@TempData["message"]');
    </script>
}

<!--Notification ajout-->
@if (TempData["text"] != null)
{
    <script>
        alert('@TempData["text"]');
    </script>
}

<!--Notification suppression-->
@if (TempData["confirm"] != null)
{
    <script>
        alert('@TempData["confirm"]');
    </script>
}


